<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.group33.greenthumb" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomeScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlantListActivity"
            android:label="@string/title_activity_plant_list"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".AddPlantActivity"
            android:label="@string/title_activity_add_plant"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".EditPlantActivity"
            android:label="@string/title_activity_edit_plant"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".DeletePlantActivity"
            android:label="@string/title_activity_delete_plant"
            android:theme="@android:style/Theme.NoTitleBar"/>
    </application>

</manifest>
